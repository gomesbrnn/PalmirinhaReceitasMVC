@model DESAFIO_MVC.DTO.ReceitaDTO

@{
    Layout = "_Layout";
}

@{
    ViewData["Title"] = "Atualizar receita";
}

<h2>Atualizar receita</h2>
<hr>

<form class="form-horizontal" asp-action="Atualizar" asp-controller="Receitas" method="post">

    <div class="form-group">
        <label asp-for="Id">ID</label>
        <input type="number" class="form-control" asp-for="Id" readonly>
        <span asp-validation-for="Id"></span>
    </div>

    <div class="form-group">
        <label asp-for="Nome">Nome</label>
        <input type="text" class="form-control" asp-for="Nome" placeholder="Ex: Bebidas">
        <span asp-validation-for="Nome"></span>
    </div>

    <div class="form-group">
        <label asp-for="CategoriaId">Categoria</label>

        <select class="form-control" asp-for="CategoriaId"
            asp-items='@(new SelectList(@ViewBag.Categorias,"Id","Nome"))'></select>

        <span asp-validation-for="CategoriaId"></span>
    </div>

    <div class="form-group">
        <label asp-for="Imagem">Imagem</label>
        <input type="text" class="form-control" asp-for="Imagem" placeholder="Url da imagem">
    </div>

    <div class="form-group">
        <label asp-for="TempoDePreparo">Tempo de Preparo</label>
        <input type="text" class="form-control" asp-for="TempoDePreparo" placeholder="Ex: 50min">
        <span asp-validation-for="TempoDePreparo"></span>
    </div>

    <div class="form-group">
        <label asp-for="QtdPorcao">Quantidade de Porções</label>
        <input type="text" class="form-control" asp-for="QtdPorcao" placeholder="Ex: 5">
        <span asp-validation-for="QtdPorcao"></span>
    </div>

    <div class="form-group">
        <label asp-for="Dificuldade">Dificuldade</label>
        <input type="text" class="form-control" asp-for="Dificuldade" placeholder="Ex: Fácil">
        <span asp-validation-for="Dificuldade"></span>
    </div>
    <div class="form-group">
        <label asp-for="Descricao">Descricao</label>
        <textarea class="form-control" asp-for="Descricao"
            placeholder="Ex: Breve introdução sobre a receita"></textarea>
        <span asp-validation-for="Descricao"></span>
    </div>

    <div class="form-group">
        <label asp-for="Ingrediente">Ingredientes</label>
        <textarea class="form-control" asp-for="Ingrediente" placeholder="Ex: 1 colher de sopa de manteiga"></textarea>
        <span asp-validation-for="Ingrediente"></span>
    </div>

    <div class="form-group">
        <label asp-for="ModoDePreparo">Modo de Preparo</label>
        <textarea class="form-control" asp-for="ModoDePreparo"
            placeholder="Ex: Misture tudo e leve ao forno"></textarea>
        <span asp-validation-for="ModoDePreparo"></span>
    </div>

    <button class="btn btn-dark">Atualizar</button>

</form>
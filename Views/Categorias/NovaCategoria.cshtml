@model DESAFIO_MVC.DTO.CategoriaDTO

@{
    Layout = "_Layout";
}

@{
    ViewData["Title"] = "Cadastar categoria";
}

<h2>Cadastro de categorias</h2>
<hr>

<form class="form-horizontal" asp-action="Salvar" asp-controller="Categorias" method="post">

    <div class="form-group">
        <label asp-for="Id">ID</label>
        <input type="number" class="form-control" value="0" asp-for="Id" readonly>
    </div>

    <div class="form-group">
        <label asp-for="Nome">Nome</label>
        <input type="text" class="form-control" asp-for="Nome" placeholder="Ex: Bebidas">
    </div>

    <div class="form-group">
        <label asp-for="Imagem">Imagem</label>
        <input type="text" class="form-control" asp-for="Imagem" placeholder="Url da imagem">
    </div>

    <button class="btn btn-dark">Cadastrar</button>

</form>